doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		title=Index
		link(rel="stylesheet", href="css/admin.css")
		script(src="js/jquery-3.1.0.js", defer)
		script(src="js/index.js", defer)
	body
		main(id="adminMain")
			div(class="wrap-content bdb_lg")
				section(class="h1 text-center m_t_25p")
					h1 Wanderland Admin
				section(class="login-box")
					form(action="/admin_sign" method="post")
						div(class="email-section")
							div(class="m_t_20x m_b_20x text-center")
								label(class="h3") 
									h3 email
								input(type="email" placeholder="Enter your email" name="email" id="adminEmail")
							div(class="error-wrap")
						div(class="pw-section")
							div(class="m_t_20x m_b_20x text-center")
								label(class="h3") 
									h3 password
								input(type="password" placeholder="password" name="password" id="adminPass")
							div(class="error-wrap text-center")
								p(class="error")=errors
							div(class="m_t_20x text-center")
								input(id="adminLogin" type="submit" value="Login")