doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        title= pageTitle
        link(rel="stylesheet", href="style.css")
        script(src="jquery-3.1.0.js", defer)
    body
        h1= title
        ul
            for item in items
                li= item.desc
        form(action="/add", method="post")
            input(type="text", name="newItem")
            input(type="submit")
            